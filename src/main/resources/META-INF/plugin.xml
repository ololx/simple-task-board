<idea-plugin>
    <id>org.simple.task.board.simple-task-board</id>
    <name>Plugin display name here</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>


    <project-components>
        <component>
            <implementation-class>org.simple.task.board.stub.SimpleTaskBoardInitializer</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">

    </extensions>
    <actions>
        <action id="SimpleTaskBoard.ToolBar.AddNewTask" class="org.simple.task.board.actions.AddNewTaskAction"
                icon="SimpleTaskBoardIcons.ToolBarActions.AddNewTask" text="Add new task"
                description="This is an action for the creating new task on board" keymap="$default">
            <keyboard-shortcut first-keystroke="control alt N" keymap="$default"/>
            <mouse-shortcut keystroke="control button3 doubleClick" keymap="$default"/>
        </action>
        <action id="SimpleTaskBoard.ToolBar.DeleteTask" class="org.simple.task.board.actions.DeleteTaskAction"
                icon="SimpleTaskBoardIcons.ToolBarActions.DeleteTasks" text="Delete tasks"
                description="This is an action for the deleting task on board" keymap="$default">
            <keyboard-shortcut first-keystroke="control alt D" keymap="$default"/>
            <mouse-shortcut keystroke="alt button3 doubleClick" keymap="$default"/>
        </action>
        <group id="SimpleTaskBoard.ToolBar">
            <reference id="SimpleTaskBoard.ToolBar.AddNewTask"/>
            <separator/>
            <reference id="SimpleTaskBoard.ToolBar.DeleteTask"/>
        </group>
    </actions>
</idea-plugin>